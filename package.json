{
  "name": "l7s-workflow-capture",
  "version": "1.1.3",
  "description": "Standalone screen recording workflow capture",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "shx mkdir -p dist/renderer && shx cp src/renderer/index.html dist/renderer/ && shx cp src/renderer/styles.css dist/renderer/",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --win",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac"
  },
  "author": "Layer 7 Systems",
  "license": "MIT",
  "dependencies": {
    "uuid": "^9.0.0",
    "archiver": "^6.0.0",
    "ffmpeg-static": "^5.2.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0",
    "shx": "^0.3.4",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@types/archiver": "^6.0.0"
  }
}
